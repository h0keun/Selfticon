<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fake"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="270dp"
            android:layout_height="230dp"
            android:src="@drawable/img"
            android:scaleType="fitCenter"
            android:layout_gravity="center">
        </ImageView>
        <EditText
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="상품설명"></EditText>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_baseline_qr_code_scanner_24"
                android:scaleType="fitCenter"
                android:layout_width="170dp"
                android:layout_height="170dp">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:weightSum="3"
                android:orientation="vertical">
            <EditText
                android:id="@+id/data11"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="교환처"></EditText>
            <EditText
                android:id="@+id/data22"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="상품명"></EditText>
            <EditText
                android:id="@+id/data33"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="가격"></EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:background="@color/fake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기프티콘 생성">
    </Button>


</LinearLayout>